.group-page
  = "#{@group.name}のページ"
.group-page__member
  Member :
  - @group.users.each do |user|
    = user.name

.group__menu
  .edit__group
    = link_to edit_group_path, class: 'edit__group__link' do
      %button.btn__edit__group
        グループを編集する
  .make__new-album
    = link_to new_group_album_path(@group), class: 'make__new-album__link' do
      %button.btn__make__new-album
        新しいアルバムを作る
  .return__mypage
    = link_to users_path, class:"return__mypage__link" do
      %button.btn__return__mypage
        マイページに戻る

.display__albums-header
  アルバム一覧
.albums-search
  .albums-search__label
    登録したアルバムを検索する
  .albums-search__field
    %input#albums-search{:placeholder => "検索したいアルバムタイトルを入力してください", :type => "text"}
  .albums-search__result
.display__albums-inner
  - if @albums.present?
    - @albums.each do |album|
      .display__albums-content
        = link_to group_album_path(@group, album.id), class: "album-content" do
          .album__picture
            = image_tag album.pictures[0].image.to_s, size: '220x150'
          .album__title
            = "タイトル：#{album.title}"
          .album__date
            = "日付：#{album.date}"
  - else
    .display__albums-blank
      まだアルバムはありません
