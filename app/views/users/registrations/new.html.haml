.registration-new__header
  New account registration
= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  = render "users/shared/error_messages", resource: resource
  .registration__form
    .field
      = f.label :ニックネーム
      %span.required
        必須
      %br/
      = f.text_field :name, autofocus: true, class: "registration__name"
    .field
      = f.label :email
      %span.required
        必須
      %br/
      = f.email_field :email, autofocus: true, autocomplete: "email", class: "registration__email"
    .field
      = f.label :パスワード
      %span.required
        必須
      - if @minimum_password_length
        %em
          (#{@minimum_password_length} 文字以上)
      %br/
      = f.password_field :password, autocomplete: "new-password", class: "registration__password"
    .field
      = f.label :パスワードの確認
      %br/
      = f.password_field :password_confirmation, autocomplete: "new-password", class: "registration__password_confirmation"
    .actions
      = f.submit "登録する", class: "registration__submit solid"
  .various__links
    .login__link
      = link_to "登録済みユーザーでログイン", new_session_path(resource_name), class: "login"
    .break
      ｜
    .top-page__link
      = link_to "トップページに戻る", root_path, class: "top-page"
